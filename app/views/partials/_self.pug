section.self
  .container
    .row
      .col-24.col-md-16.col-lg-14
        .self__box
          h2.heading.heading--fff.self__heading!=content.index.self.heading
          .self__text!=content.index.self.text
      .col-md-8.col-lg-10.hidden-sm-down
        .self__image
          img.self__img.self__img--1(src!=content.index.self.img.src, alt!=content.index.self.img.alt)
          img.self__img.self__img--2.animate(src!=content.index.self.img1.src, alt!=content.index.self.img1.alt, data-animation="widthAnimate")
      .col-24.col-lg-18      
        form.contact__form.contactForm.contactForm--modal(method='post', action='./mail/mail.php')
          if (content.index.self.form.formGroup)
            .row
              if (content.index.self.form.formGroup.inputs)
                .form-group.form-group--relative.col-24.col-md-12
                  if (content.index.self.form.formGroup.select)
                    select.select.select--dropdown(name=content.index.self.form.formGroup.select.name)
                      each option in content.index.self.form.formGroup.select.options
                        option(value=option.text, data-content='<i class="' + option.icon + '"></i>')!= option.text
                  each input in content.index.self.form.formGroup.inputs
                    input.form-control.form__input.form__phone(type=input.type, name=input.name, placeholder=input.placeholder)
              .col-24.col-md-12
                button.button.form__btn.self__btn(name='form', value='динамика цен', type='submit', data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Файл отправляется...")!=content.index.self.form.btn
                  i.ic.ic--apple
              .col-24
                .form__confident!=content.index.self.form.confident
