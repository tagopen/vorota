header.header
  .container
    .row.justify-content-between
      .col-24.col-md-14.col-lg-10.col-xl-8
        .logo.header__logo
          .row
            .col-24.col-sm-9.col-md-8.col-lg-7.text-center
              a.logo__link
                img.img-fluid.logo__img(src!=content.index.header.logo.src, alt!=content.index.header.logo.alt)
            .col-24.col-sm-15.col-md-16.col-lg-17
              .logo__text!=content.index.header.logo.text
      .col-24.col-md-10.col-lg-7.col-xl-6
        .contact
          .contact__box
            a.contact__phone(href!=content.index.header.contact.phone.href)  
              i.ic.ic--phone
              .contact__number!=content.index.header.contact.phone.text
          button.button.contact__btn.text-center(type='button', data-toggle="modal", data-target="#call__modal")
            !=content.index.header.contact.btn     
    .row.justify-content-center
      .col-24.col-lg-20                 
        h1.title!=page.title
    .row
      .col-24.col-md-12
        .header__image
          img(src="img/vorota1200.png")
      .col-24.col-md-12
        .header__box
          .row
            each item, i in content.index.header.content 
              .col-24.col-lg-12
                .header__point
                  .row
                    .col-6.col-lg-8.col-xl-7
                      .header__point--icon
                        i.ic(class="ic--header"+(i+1))
                    .col-18.col-lg-16.col-xl-15.align-self-center
                      .header__point--text!=item.text   
        .header__info
          .header__text!=content.index.header.text 
          button.button.header__btn(OnClick="javascript:jivo_api.open();")!=content.index.header.btn.text
            i.ic.ic--jiv      